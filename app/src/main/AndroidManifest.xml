<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edu.schooltask">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 网络访问权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 读取网络状态权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- 震动权限 -->
    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.LoginActivity" />
        <activity
            android:name=".ui.activity.ReleaseTaskActivity"
            android:label="发布任务"
            android:theme="@style/WithImageStyle"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".ui.activity.MoneyActivity"
            android:label="我的钱包" />
        <activity
            android:name=".ui.activity.WaitAcceptOrderActivity"
            android:label="任务详情"
            android:theme="@style/WithImageStyle" />
        <activity
            android:name=".ui.activity.ImageActivity"
            android:label=""
            android:theme="@style/ImageStyle" />
        <activity
            android:name=".ui.activity.UserActivity"
            android:label="" />
        <activity
            android:name=".ui.activity.TaskOrderActivity"
            android:label="订单详情"
            android:theme="@style/WithImageStyle" />
        <activity
            android:name=".ui.activity.SetPayPwdActivity"
            android:label="设置支付密码" />
        <activity
            android:name=".ui.activity.UserEditActivity"
            android:label="修改资料" />
        <activity
            android:name=".ui.activity.TaskListActivity"
            android:label="任务列表" />
        <activity
            android:name=".ui.activity.DetailActivity"
            android:label="账单" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".service.PollService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".ui.activity.PrivateMessageActivity"
            android:theme="@style/WithImageStyle"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.activity.PersonalCenterActivity"
            android:label="个人中心" />
        <activity
            android:name=".ui.activity.SettingActivity"
            android:label="设置" />
        <activity
            android:name=".ui.activity.HelpActivity"
            android:label="帮助" />
        <activity
            android:name=".ui.activity.AboutActivity"
            android:label="关于" />
        <activity android:name=".ui.activity.UpdatePwdActivity" />
        <activity
            android:name=".ui.activity.MessageAndPrivacyActivity"
            android:label="消息隐私" />
        <activity android:name="cn.bmob.pay.v3.act.PayAct" />
        <activity android:name=".ui.activity.VoucherActivity"
            android:label="我的代金券"/>
    </application>

</manifest>