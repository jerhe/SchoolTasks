<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="InputTextView">
        <attr name="IT_text" format="string"/>
        <attr name="IT_hint" format="string"/>
        <attr name="IT_number" format="boolean"/>
        <attr name="IT_inputType" format="string"/>
        <attr name="IT_tip" format="string"/>
    </declare-styleable>

    <declare-styleable name="TextSpinner">
        <attr name="TS_text" format="string"/>
    </declare-styleable>

    <declare-styleable name="ContentView">
        <attr name="maxLength" format="integer"/>
        <attr name="contentHint" format="string"/>
    </declare-styleable>

    <declare-styleable name="MenuItem">
        <attr name="itemText" format="string"/>
    </declare-styleable>

    <declare-styleable name="CommentInputBoard">
        <attr name="inputHint" format="string"/>
        <attr name="btnText" format="string"/>
    </declare-styleable>

    <declare-styleable name="UserEditItem">
        <attr name="name" format="string"/>
        <attr name="type" format="string"/>    <!-- text：文本 image：图像 head：头像-->
    </declare-styleable>

    <declare-styleable name="TextItem">
        <attr name="itemName" format="string"/>
    </declare-styleable>
    
    <declare-styleable name="ImageRecyclerView">
        <attr name="imageColumns" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ImageTextView">
        <attr name="ImageText_text" format="string"/>
        <attr name="ImageText_icon" format="reference"/>
        <attr name="ImageText_textColor" format="color" />
        <attr name="ImageText_gravity" format="enum" >
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
</resources>