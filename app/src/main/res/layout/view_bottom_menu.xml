<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <LinearLayout
        android:id="@+id/bm_home"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/bm_home_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_action_home"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:text="首页"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bm_talk"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="25dp">
            <ImageView
                android:id="@+id/bm_talk_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_action_talk"/>
            <TextView
                android:id="@+id/bm_talk_num"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_talk_num"
                android:visibility="invisible"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:text="消息"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bm_order"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/bm_order_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_action_order"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:text="订单"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bm_user"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/bm_user_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_action_user"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:text="我"/>
    </LinearLayout>
</LinearLayout>