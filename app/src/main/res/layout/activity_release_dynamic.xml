<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReleaseDynamicActivity">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.edu.schooltask.view.ContentView
                android:id="@+id/rd_content"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:maxLength="200"
                app:contentHint="想说点什么...">
            </com.edu.schooltask.view.ContentView>
            <include layout="@layout/line"/>
            <include layout="@layout/layout_select_image"/>
            <include layout="@layout/line"/>
            <com.edu.schooltask.view.ImageTextView
                android:id="@+id/rd_location"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_item_white"
                android:padding="15dp"
                app:ImageText_text="我的位置"
                app:ImageText_icon="@drawable/ic_location">
            </com.edu.schooltask.view.ImageTextView>
            <include layout="@layout/line"/>
            <Switch
                android:id="@+id/rd_anonymous"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="匿名 "
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
