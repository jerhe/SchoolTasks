<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.schooltask.activity.TaskListActivity">
    <Space
        android:id="@+id/tl_space"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <com.baoyz.widget.PullRefreshLayout
        android:layout_below="@id/tl_space"
        android:id="@+id/tl_prl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:refreshColor="@color/colorPrimary">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/tl_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </com.baoyz.widget.PullRefreshLayout>
    <View
        android:id="@+id/tl_shadow"
        android:layout_below="@id/tl_space"
        android:background="@color/shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>
    <com.edu.schooltask.view.TaskFilter
        android:id="@+id/tl_tf"
        android:layout_below="@id/tl_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">
    </com.edu.schooltask.view.TaskFilter>
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/tl_search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_action_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/tl_search_text"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tl_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:maxLines="1"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            android:hint="寻找任务"
            android:textCursorDrawable="@null"/>
        <TextView
            android:id="@+id/tl_tf_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="筛选"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_hollow_white"/>
    </RelativeLayout>
</RelativeLayout>
