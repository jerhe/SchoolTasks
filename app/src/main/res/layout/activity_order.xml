<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edu.schooltask.activity.OrderActivity">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:id="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="invisible">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimary"
                android:text="订单信息"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/lineColor"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <com.edu.schooltask.view.InputText
                android:id="@+id/order_orderid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:text="订单号">
            </com.edu.schooltask.view.InputText>
            <com.edu.schooltask.view.InputText
                android:id="@+id/order_school"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:text="学校">
            </com.edu.schooltask.view.InputText>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="发布人"/>
                <ImageView
                    android:id="@+id/order_release_head"
                    android:src="@drawable/head"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/order_release_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称"/>
                    <TextView
                        android:layout_alignTop="@id/order_release_name"
                        android:layout_toRightOf="@id/order_release_name"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/order_release_sex"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="♂"/>
                    <TextView
                        android:id="@+id/order_release_sign"
                        android:layout_marginTop="3dp"
                        android:textSize="12sp"
                        android:textColor="@color/hintColor"
                        android:maxLines="1"
                        android:layout_below="@id/order_release_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个性签名"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/order_release_talk"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_action_talk_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="内容"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/order_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我是内容balabala"/>
                    <LinearLayout
                        android:id="@+id/order_image_layout"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <ImageView
                            android:id="@+id/order_image_1"
                            android:layout_width="0dp"
                            android:scaleType="fitXY"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/order_image_2"
                            android:layout_width="0dp"
                            android:scaleType="fitXY"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/order_image_3"
                            android:layout_width="0dp"
                            android:scaleType="fitXY"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <com.edu.schooltask.view.InputText
                android:id="@+id/order_cost"
                app:text="金额"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </com.edu.schooltask.view.InputText>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimary"
                android:text="订单状态"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/lineColor"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="20dp"
                    android:id="@+id/order_state_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
