<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.edu.schooltask.activity.TaskOrderActivity">
    <include layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/order_srl"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ScrollView
                    android:id="@+id/order_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textColor="@color/colorPrimary"
                            android:text="订单信息"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/lineColor"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"/>
                        <com.edu.schooltask.view.TextItem
                            android:id="@+id/order_id"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:itemName="订单号">
                        </com.edu.schooltask.view.TextItem>
                        <com.edu.schooltask.view.TextItem
                            android:id="@+id/order_school"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:itemName="学校">
                        </com.edu.schooltask.view.TextItem>
                        <LinearLayout
                            android:id="@+id/order_release_user_layout"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="发布人"/>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/order_release_head"
                                android:src="@drawable/head"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />
                            <RelativeLayout
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:id="@+id/order_release_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="昵称"/>
                                <TextView
                                    android:layout_alignTop="@id/order_release_name"
                                    android:layout_toRightOf="@id/order_release_name"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginLeft="3dp"
                                    android:id="@+id/order_release_sex"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="♂"/>
                                <TextView
                                    android:id="@+id/order_release_school"
                                    android:layout_marginTop="3dp"
                                    android:textSize="12sp"
                                    android:textColor="@color/hintColor"
                                    android:maxLines="1"
                                    android:layout_below="@id/order_release_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="学校"/>
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/order_release_talk"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/ic_action_message_theme"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="内容"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/order_content"
                                    android:textIsSelectable="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/order_image_rv"
                                    android:fadingEdge="none"
                                    android:overScrollMode="never"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                </android.support.v7.widget.RecyclerView>
                            </LinearLayout>
                        </LinearLayout>
                        <com.edu.schooltask.view.TextItem
                            android:id="@+id/order_cost"
                            app:itemName="金额"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                        </com.edu.schooltask.view.TextItem>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textColor="@color/colorPrimary"
                            android:text="订单状态"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/lineColor"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <android.support.v7.widget.RecyclerView
                                android:layout_marginTop="20dp"
                                android:id="@+id/order_state_rv"
                                android:fadingEdge="none"
                                android:overScrollMode="never"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </android.support.v7.widget.RecyclerView>
                        </RelativeLayout>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:textColor="@color/colorPrimary"
                            android:text="订单评论"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/lineColor"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <android.support.v7.widget.RecyclerView
                                android:layout_marginTop="10dp"
                                android:id="@+id/order_comment_rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </android.support.v7.widget.RecyclerView>
                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>
            </android.support.v4.widget.SwipeRefreshLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/lineColor"/>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:background="@color/mainBackgroundColor"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/order_abandon_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/red"
                    android:text="放弃任务"
                    android:background="@drawable/shape_red_nosolid_btn"
                    android:layout_marginLeft="20dp"
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/order_cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/red"
                    android:text="取消任务"
                    android:background="@drawable/shape_red_nosolid_btn"
                    android:layout_marginLeft="20dp"
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/order_overtime_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/red"
                    android:text="任务超时"
                    android:background="@drawable/shape_red_nosolid_btn"
                    android:layout_marginLeft="20dp"
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/order_finish_btn"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_theme_btn"
                    android:text="完成任务"
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/order_confirm_btn"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_theme_btn"
                    android:text="确认完成"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/to_comment_child_rv"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:visibility="invisible">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>


</LinearLayout>
