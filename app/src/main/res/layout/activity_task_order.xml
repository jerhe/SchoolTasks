<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.edu.schooltask.activity.TaskOrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/toolbar"/>
            <com.baoyz.widget.PullRefreshLayout
                android:id="@+id/order_prl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:refreshColor="@color/colorPrimary">
                <ScrollView
                    android:id="@+id/order_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadingEdge="none"
                    android:overScrollMode="never"
                    android:visibility="invisible">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="订单信息"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/lineColor"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"/>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:text="订单号"
                                android:textSize="12sp"
                                android:gravity="center"/>
                            <TextView
                                android:id="@+id/order_id"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="12sp"
                                android:gravity="center_vertical"
                                android:textIsSelectable="true"/>
                        </LinearLayout>
                        <com.edu.schooltask.view.TaskItemView
                            android:id="@+id/order_tiv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </com.edu.schooltask.view.TaskItemView>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="订单状态"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/lineColor"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"/>
                        <com.edu.schooltask.view.recyclerview.OrderStateRecyclerView
                            android:layout_marginTop="20dp"
                            android:id="@+id/order_osrv"
                            android:fadingEdge="none"
                            android:overScrollMode="never"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </com.edu.schooltask.view.recyclerview.OrderStateRecyclerView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:background="@color/divide"/>
                        <com.edu.schooltask.view.TaskCountView
                            android:id="@+id/order_count"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/lineColor"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"/>
                        <!-- 这个布局是为了防止RecyclerView显示不全 -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.edu.schooltask.view.recyclerview.CommentRecyclerView
                                android:layout_marginTop="10dp"
                                android:id="@+id/order_crv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </com.edu.schooltask.view.recyclerview.CommentRecyclerView>
                        </RelativeLayout>

                    </LinearLayout>
                </ScrollView>
            </com.baoyz.widget.PullRefreshLayout>
        </LinearLayout>

        <com.edu.schooltask.view.CommentReplyView
            android:id="@+id/order_comment_reply_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:visibility="invisible">
        </com.edu.schooltask.view.CommentReplyView>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/lineColor"/>
    <RelativeLayout
        android:background="@color/mainBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:id="@+id/order_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/order_comment_btn"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_white"
                android:visibility="invisible"
                android:text="评论"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true">
                <Button
                    android:id="@+id/order_abandon_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="放弃任务"
                    android:background="@drawable/btn_white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/order_cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="取消任务"
                    android:background="@drawable/btn_white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/order_overtime_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="任务超时"
                    android:background="@drawable/btn_white"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/order_finish_btn"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_theme"
                    android:text="完成任务"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/order_confirm_btn"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_theme"
                    android:text="确认完成"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>
        <com.edu.schooltask.view.CommentInputBoard
            android:id="@+id/order_cib"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        </com.edu.schooltask.view.CommentInputBoard>
    </RelativeLayout>

</LinearLayout>
