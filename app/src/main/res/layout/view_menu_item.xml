<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/mi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:gravity="center"/>
    <View
        android:id="@+id/mi_line1"
        android:layout_alignTop="@id/mi_text"
        android:layout_alignLeft="@id/mi_text"
        android:layout_alignRight="@id/mi_text"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp" />
    <View
        android:id="@+id/mi_line2"
        android:layout_alignBottom="@id/mi_text"
        android:layout_alignLeft="@id/mi_text"
        android:layout_alignRight="@id/mi_text"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"/>
    <View
        android:id="@+id/mi_line3"
        android:layout_alignTop="@id/mi_text"
        android:layout_alignBottom="@id/mi_text"
        android:layout_alignLeft="@id/mi_text"
        android:layout_width="0.5dp"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/mi_line4"
        android:layout_alignTop="@id/mi_text"
        android:layout_alignBottom="@id/mi_text"
        android:layout_alignRight="@id/mi_text"
        android:layout_width="0.5dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>