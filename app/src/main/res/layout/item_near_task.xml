<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/nt_head"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/nt_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/nt_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"/>
        <TextView
            android:layout_alignTop="@id/nt_name"
            android:layout_toRightOf="@id/nt_name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/nt_sex"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/nt_school"
            android:layout_marginTop="3dp"
            android:layout_below="@id/nt_name"
            android:layout_alignLeft="@id/nt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校"/>
        <TextView
            android:id="@+id/nt_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/nt_name"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:text="￥1399"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/nt_content"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/nt_image_1"
            android:layout_width="0dp"
            android:src="@drawable/ic_icon_img"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/nt_image_2"
            android:src="@drawable/ic_icon_img"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/nt_image_3"
            android:src="@drawable/ic_icon_img"
            android:layout_width="0dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/lineColor"/>
</LinearLayout>