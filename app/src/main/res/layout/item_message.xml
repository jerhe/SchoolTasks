<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/message_head"
        android:layout_width="45dp"
        android:layout_height="45dp" />
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/message_name"
        android:textSize="15sp"
        android:layout_alignTop="@id/message_head"
        android:layout_toRightOf="@id/message_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="昵称"/>
    <TextView
        android:id="@+id/message_msg"
        android:layout_marginTop="5dp"
        android:layout_below="@id/message_name"
        android:layout_alignLeft="@id/message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="消息"/>
    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/message_count"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/message_name"
        android:layout_marginRight="20dp"
        android:text="1"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@drawable/shape_talk_num"
        android:textColor="@color/white"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/lineColor"
        android:layout_below="@id/message_head"/>
</RelativeLayout>