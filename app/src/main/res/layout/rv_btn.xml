<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/divide"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/home_task_release"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_action_release"
                            android:scaleType="center"
                            android:background="@drawable/shape_release_task_btn"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="发布任务"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/home_task_search"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_action_accept"
                            android:scaleType="center"
                            android:background="@drawable/shape_accept_task_btn"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="查找任务"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/home_secondhand"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_action_secondhand"
                            android:scaleType="center"
                            android:background="@drawable/shape_secondhand_btn"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="二手市场"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/home_job"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_action_job"
                            android:scaleType="center"
                            android:background="@drawable/shape_job_btn"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="兼职招聘"/>
                </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/divide"/>
</LinearLayout>