<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.WaitAcceptOrderActivity">
    <RelativeLayout
        android:id="@+id/wao_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/backgroundColor"
        android:layout_height="wrap_content">
        <com.edu.schooltask.ui.view.CommentInputBoard
            android:id="@+id/wao_cib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="invisible">
        </com.edu.schooltask.ui.view.CommentInputBoard>
        <RelativeLayout
            android:id="@+id/wao_btn_layout"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/wao_comment_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_comment"/>

            <TextView
                android:id="@+id/wao_accept_btn"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="接单"
                android:textColor="@color/white"
                android:background="@drawable/btn_theme"
                android:layout_width="70dp"
                android:gravity="center"
                android:layout_height="@dimen/btn_height" />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_above="@id/wao_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar"/>
        <com.baoyz.widget.PullRefreshLayout
            android:id="@+id/wao_prl"
            android:layout_below="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:refreshColor="@color/colorPrimary">
            <com.edu.schooltask.ui.view.MyScrollView
                android:id="@+id/wao_msv"
                android:fillViewport="true"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/wao_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.edu.schooltask.ui.view.TaskItemView
                            android:id="@+id/wao_tiv"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </com.edu.schooltask.ui.view.TaskItemView>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/wao_count_layout"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.edu.schooltask.ui.view.recyclerview.CommentRecyclerView
                            android:id="@+id/wao_crv"
                            android:nestedScrollingEnabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </com.edu.schooltask.ui.view.recyclerview.CommentRecyclerView>
                    </RelativeLayout>

                </LinearLayout>

            </com.edu.schooltask.ui.view.MyScrollView>

        </com.baoyz.widget.PullRefreshLayout>
        <RelativeLayout
            android:id="@+id/wao_count_layout_top"
            android:layout_below="@id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </RelativeLayout>
        <com.edu.schooltask.ui.view.CommentReplyView
            android:id="@+id/wao_comment_reply_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.edu.schooltask.ui.view.CommentReplyView>
    </RelativeLayout>
    <include layout="@layout/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/wao_bottom"/>
    <com.edu.schooltask.ui.view.PayView
        android:id="@+id/wao_pv"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.edu.schooltask.ui.view.PayView>
</RelativeLayout>
