<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_order"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.schooltask.activity.WaitAcceptOrderActivity">
    <include layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/wao_srl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/wao_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/wao_child_srl"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/wao_child_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/lineColor"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_gravity="bottom"
        android:gravity="center_vertical|right"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <com.edu.schooltask.view.InputBoard
            android:id="@+id/wao_ib"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:inputHint="请输入评论"
            app:btnText="评论">
        </com.edu.schooltask.view.InputBoard>
        <RelativeLayout
            android:id="@+id/wao_btn_layout"
            android:gravity="center_vertical"
            android:background="@color/mainBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/wao_assess_btn"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="评论"
                android:background="@drawable/shape_input_white_corner"
                android:layout_width="60dp"
                android:layout_height="35dp" />
            <Button
                android:id="@+id/wao_accept_btn"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="接单"
                android:textColor="@color/white"
                android:background="@drawable/shape_theme_btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
